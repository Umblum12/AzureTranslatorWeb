@model dynamic
@{
    ViewData["Title"] = "Azure Translator";
}

<h2>Azure Translator</h2>

@if (ViewBag.Error != null)
{
    <div style="color: red;">@ViewBag.Error</div>
}

<form method="post">
    <div>
        <label for="textToTranslate">Text to Translate:</label>
        <input type="text" id="textToTranslate" name="textToTranslate" required />
    </div>
    <div>
        <label for="targetLanguage">Target Language:</label>
        <select id="targetLanguage" name="targetLanguage">
            <option value="es">Spanish</option>
            <option value="fr">French</option>
            <option value="de">German</option>
            <option value="it">Italian</option>
        </select>
    </div>
    <button type="submit">Translate</button>
</form>

<h3>Chat History:</h3>
<div id="chatHistory" style="border: 1px solid #ccc; padding: 10px; width: 50%; max-width: 600px; margin-top: 20px;">
    @if (ViewBag.ChatHistory != null)
    {
        foreach (var message in ViewBag.ChatHistory)
        {
            <div style="margin-bottom: 15px; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                <p><strong>You:</strong> @message.UserMessage</p>
                <p><strong>Translation:</strong> @message.TranslatedMessage</p>
            </div>
        }
    }

